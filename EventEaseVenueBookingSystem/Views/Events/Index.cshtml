@model IEnumerable<EventEaseVenueBookingSystem.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>

<p>
    
    <a class="btn btn-primary " asp-controller="Events" asp-action="Create"> Create New Event </a>
</p>

<p>
    <form asp-controller="Events" asp-action="Index">
        <label>
            Event Name: <input type="text" name="SearchString" />
        </label>
        <input type="submit" value="Filter" />
    </form>
</p>

<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
         <a class="btn btn-primary btn-sm" asp-controller="Events" asp-action="Edit" asp-route-id="@item.EventId">Edit</a>
         <a class="btn btn-secondary btn-sm" asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId">Details</a>
         <a class="btn btn-danger btn-sm" asp-controller="Events" asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
        </tr>
}
    </tbody>
</table>+
