@model IEnumerable<EventEaseVenueBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Bookings</h1>

<p>
   
    <a class="btn btn-primary " asp-controller="Bookings" asp-action="Create"> Create New Booking </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Bookings" asp-action="Edit" asp-route-id="@item.BookingId">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-controller="Bookings" asp-action="Details" asp-route-id="@item.BookingId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Bookings" asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
