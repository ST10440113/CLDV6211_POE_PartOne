@model EventEaseVenueBookingSystem.Models.Booking
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Booking</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label"></label>
                <select asp-for="EventId" asp-items="@ViewBag.EventList" class="form-select">
                    <option disabled selected>Select Event</option>
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue.VenueName" class="control-label"></label>
                <select asp-for="VenueId" asp-items="@ViewBag.VenueList" class="form-select">
                    <option disabled selected>Select Venue</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary " asp-controller="Bookings" asp-action="Index"> Back to List </a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
